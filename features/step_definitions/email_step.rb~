Given /^I see the filters: (.*)$/ do |filters|
  visit '/email/index'
  step %{I add the filters: #{filters}}
end

Given /^I add the filters: (.*)$/ do |filters|
  filters = filters.split(",")
  filters.each do |filter|
    m = /([a-zA-Z0-9]*)-([a-zA-Z0-9]*)/.match(filter)
    category = m[1]
    attr = m[2]
    click_link(attr)
  end
end
